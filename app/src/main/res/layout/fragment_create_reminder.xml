<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context="com.example.android_bleed.reminder.CreateReminderFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <EditText
                android:id="@+id/et_reminder_message_fragment_create_reminder"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint="Enter Reminder Message"
                android:layout_gravity="center_horizontal"/>

        <DatePicker
                android:id="@+id/dp_reminder_time_fragment_create_reminder"
                android:layout_width="320dp"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

            <ImageButton
                    android:id="@+id/ib_save_reminder_fragment_create_reminder"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@android:color/holo_blue_light"
                    android:src="@android:drawable/ic_menu_save"/>

            <ImageButton
                    android:id="@+id/ib_cancel_fragment_create_reminder"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@android:color/holo_red_light"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
