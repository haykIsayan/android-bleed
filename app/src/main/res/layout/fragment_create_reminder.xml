<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context="com.example.android_bleed.editing.view.CreateReminderFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="80dp"
                                           android:layout_margin="16dp">
            <Button
                    android:id="@+id/btn_date_fragment_create_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/rounded_bg_orange_v1"
                    android:textColor="@android:color/white"
            />

        </androidx.cardview.widget.CardView>

        <CalendarView android:layout_width="match_parent"
                      android:layout_height="80dp"
                      android:layout_margin="16dp">
            <Button
                    android:id="@+id/btn_time_fragment_create_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/rounded_bg_red_v1"
                    android:textColor="@android:color/white"
            />

        </CalendarView>

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:layout_margin="16dp">

            <EditText
                    android:id="@+id/et_reminder_message_fragment_create_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:hint="Enter Reminder Message"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save_reminder_create_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:src="@drawable/ic_action_reminder"
            android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
