<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context="com.example.android_bleed.reminder.view.ReminderPreviewFragment">









    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:layout_constraintLeft_toLeftOf="parent"
                                       app:layout_constraintRight_toRightOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       android:layout_margin="10dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_reminder_message_fragment_reminder_preview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="This is your reminder message"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:weightSum="2">

                <TextView
                        android:id="@+id/tv_reminder_time_fragment_reminder_preview"
                        android:layout_width="0dp" android:layout_height="100dp"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:text="16:25 AM"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_bg_orange_v1"/>

                <TextView
                        android:id="@+id/tv_reminder_date_fragment_reminder_preview"
                        android:layout_width="0dp"
                          android:layout_height="100dp"
                          android:layout_weight="1"
                          android:textSize="24sp"
                          android:text="June 27, 1998"
                          android:gravity="center"
                          android:textColor="@android:color/white"
                          android:layout_margin="8dp"
                          android:background="@drawable/rounded_bg_red_v1"/>

            </LinearLayout>

            <Button
                    android:id="@+id/btn_delete_reminder_fragment_reminder_preview"
                    android:layout_width="match_parent"
                    android:text="delete Reminder"
                    android:background="@drawable/rounded_bg_grey"
                    android:textColor="@android:color/white"
                    android:layout_margin="10dp"
                    android:layout_height="60dp"/>


        </LinearLayout>








    </androidx.cardview.widget.CardView>










</androidx.constraintlayout.widget.ConstraintLayout>
